<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button fx:id="btnClear" text="Clear" GridPane.rowIndex="0" GridPane.columnIndex="1"
            onAction="#clickBtnClear"/>
    <Button fx:id="btnSend" text="Send" GridPane.rowIndex="1" GridPane.columnIndex="1"
    onAction="#clickBtnSend"/>
    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0"
    prefWidth="500" prefRowCount="12"/>
    <TextField fx:id="textField" promptText="input text" GridPane.rowIndex="1"
               GridPane.columnIndex="0" onAction="#clickBtnSend"/>

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

</GridPane>